// :root
//   --doc-height 100%

html
  box-sizing border-box
  min-width 320px
  margin 0
  font-size 100%
  // -ms-overflow-style scrollbar
  -ms-text-size-adjust 100%
  // scroll-behavior smooth
  @media (min-width 1280px)
    position fixed
    top 0
    right 0
    bottom 0
    left 0

  &.is-menu-open
    display flex
    overflow hidden

*
*:before
*:after
  box-sizing inherit

html
body
  height 100vh
  // height var(--doc-height)

body
  text-base()
  position relative
  width 100%
  background-color var(--bg-color)
  backface-visibility hidden
  text-rendering optimizeLegibility
  font-variant-numeric lining-nums proportional-nums
  font-smoothing()
  &:after
    display table
    clear both
    content ""
  // &:has(dialog[open])
  //   overflow hidden
  +desktop()
    overflow-y hidden

:focus:not(:focus-visible)
  outline none

